basic-color = #f9f9f9
second-color = #ff0000
third-color = #606060
is-night = false

body
  padding 30px
  if is-night
    background-color invert(basic-color)
  else
    background-color basic-color

.header
  if is-night
    background-color invert(second-color)
  else
    background-color second-color
  &:after
    content ""
    display inline-block
    padding-top 10%

.main
  display flex
  width 100%
  padding 30px 0

.sider
  width 15%
  if is-night
    background-color invert(third-color)
  else
    background-color third-color

.content
  flex-grow 1
  &:after
    content ""
    display inline-block
    padding-top 50%
